<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hgdiv.office.controller.MenuController">
   <children>
      <BorderPane id="borderpane" maxHeight="600.0" maxWidth="1000.0" prefHeight="600.0" prefWidth="1000.0">
         <top>
            <MenuBar maxWidth="-Infinity" prefWidth="2000.0">
               <menus>
                  <Menu mnemonicParsing="false" text="Project">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleNewProject" text="New Project (Blank)" />
                        <MenuItem mnemonicParsing="false" text="Open Project" />
                        <MenuItem mnemonicParsing="false" onAction="#handleSaveProject" text="Save Current Project" />
                        <MenuItem mnemonicParsing="false" onAction="#handleExitCommander" text="Exit SuperCommander" />
                        
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="QuickTasks">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleBlankWorkbook" text="New Blank Excel Workbook" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAboutSuperCommander" text="About SuperCommander" />
                     </items>
                  </Menu>
               </menus>
               <tooltip>
                  <Tooltip text="Start by creating a new project" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
               </tooltip>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
