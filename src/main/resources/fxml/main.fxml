<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?><?import javafx.scene.layout.*?>

<VBox fx:id="rootNode" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spreadsheetbuddy.controller.ViewController">
    <MenuBar id="mainMenu" fx:id="mainMenu" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
        xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#createNewWorkbook" text="New Workbook" />
            <MenuItem mnemonicParsing="false" onAction="#openWorkBook" text="Open Workbook" />
            <Menu fx:id="recentFilesMenu" mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem onAction="#closeWorkbook" mnemonicParsing="false" text="Close" />
            <MenuItem onAction="#saveWorkbook" mnemonicParsing="false" text="Save" />
            <MenuItem onAction="#saveWorkbookAs" mnemonicParsing="false" text="Save As" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem onAction="#openPreferences" mnemonicParsing="false" text="Preferences" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem onAction="#exitRequested" mnemonicParsing="false" text="Exit" />
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
        </Menu>
        <Menu mnemonicParsing="false" text="Tools">
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Export" />
            <MenuItem mnemonicParsing="false" text="Import" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
        </Menu>
        <Menu mnemonicParsing="false" text="View">
            <Menu mnemonicParsing="false" text="ViewOptions">
                <MenuItem mnemonicParsing="false" text="Some View 1"/>
                <MenuItem mnemonicParsing="false" text="Some View 2"/>
                <MenuItem mnemonicParsing="false" text="Some View 3"/>
                <MenuItem mnemonicParsing="false" text="Some View 4"/>
                <MenuItem mnemonicParsing="false" text="Some View 5"/>
            </Menu>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#openAboutPage" text="About Spreadsheet Buddy" />
            <MenuItem mnemonicParsing="false" onAction="#openIssuesPage" text="Resolve Issues" />
        </Menu>
    </MenuBar>
        <fx:include source="ssheet.fxml" VBox.vgrow="ALWAYS" prefWidth="1200.0" />
</VBox>
